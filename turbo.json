{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "clean:full": {
      "cache": false
    },
    "generate:docs": {
      "dependsOn": ["^generate:docs", "^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["docs/**"]
    }
  }
}
